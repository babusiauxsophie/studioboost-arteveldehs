<nav class="navbar">
    <h2 class="nav__title {% if navColor == 'light' %}nav--light{% endif %}">
        Studio Boost
    </h2>
        

    <ul class="nav__menu">
        {% for nav_item in collections.nav %}
            <li class="nav__item ">
                <a class="nav__link {% if page.url == nav_item.page.url %} nav__link--active {% endif %} {% if navColor == 'light' %}nav--light{% endif %}"  href="{{ nav_item.page.url }}">
                    {{ nav_item.data.nav }}
                </a>
            </li>
        {% endfor %}
    </ul>
</nav>